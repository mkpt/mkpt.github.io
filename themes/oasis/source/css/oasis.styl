/* Main Styles */

@import '_highlight/index'
@import '_post'

fonts = Inter var,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol,Noto Color Emoji

color-accent = #394867
color-primary = #1a202c

body
  display flex
  overflow-x hidden
  flex-direction column
  justify-content flex-start
  align-items center /* For horizontal alignment */
  padding-top 5em
  padding-bottom 8em
  font-family fonts
  color: color-primary

div#content
  width 40em
  max-width 90%
  padding 1em

h1#title
  margin-bottom 0

.oma 
  display inline-block
  height .9em
  width .9em
  background-repeat no-repeat
  background-position center center
  margin .1em 0em 0 0em
  vertical-align -0.1em
  background-size 1em 1em

.oma-moka-pot
  background-image url("https://cdn.jsdelivr.net/gh/hfg-gmuend/openmoji@14.0.0/color/svg/E152.svg")

div#menu-outer
  margin-top 0.5em

nav#menu-inner 
  a,span
    margin-right 1em
    font-weight 520
  span
    color color-primary
    text-decoration none
  a
    color color-accent
    text-decoration underline

div#content-outer
  margin-top 2em
  div#content-inner
    div#paginator
      margin-top 4em
      a
        color color-accent
        margin-right 1em
      span
        color color-accent
        margin-right 1em

div.post-item
  margin-bottom 1em
  p
    margin-top 0
    margin-bottom 0.5em
    a
      color #19202b
      font-size 1.2em
      font-weight 500
      text-decoration none

time
  color #b9bfcc

div#bottom-inner
  margin-top 8em
  hr
    background #CCCCCC
    height 1px
    border none
  div
    display flex
    height 2em
    justify-content space-between
    align-items center
    a
      color #19202b
    #hexo
      float right
    img
      width 1em
      height 1em
      margin-left 1em
      margin-top 3px

img
  max-width 100%

aside
  a
    color color-accent
  li
    margin-top 0.5em
    margin-bottom 0.5em

/* Responsive Styles */
@media (max-width: 768px)
  html
    overflow-x hidden 
  
  body
    padding-top 2em
    padding-bottom 4em
    overflow-x hidden 

  div#content
    width 100%
    max-width 100%
    padding 1em

div#menu-outer
  margin-bottom: 1.5em

  h1#title
    font-size 2em

  nav#menu-inner
    a,span
      margin-right 0.5em
      font-size 1.2em

  div#content-outer
    margin-top 1em

  div#content-inner
    div#paginator
      margin-top 2em
      a
        font-size 1.2em
      span
        font-size 1.2em

  div.post-item
    p
      a
        font-size 1.3em

  div#bottom-inner
    margin-top 4em
    div
      display flex
      flex-direction column
      align-items flex-start
      a
        font-size 1.2em
      img
        width 1em
        height 1em
  .oma 
    display inline-block
    height .9em
    width .9em
    background-repeat no-repeat
    background-position center center
    margin .1em 0em 0 0em
    vertical-align -0.1em
    background-size 1em 1em

  .oma-moka-pot
    background-image url("https://cdn.jsdelivr.net/gh/hfg-gmuend/openmoji@14.0.0/color/svg/E152.svg")